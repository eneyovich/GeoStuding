<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background_main_screen"
    tools:context="com.dzondza.vasya.geostuding.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/europe_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_europe"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

    <Button
        android:id="@+id/asia_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_asia"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

    <Button
        android:id="@+id/namerica_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_namerica"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

    <Button
        android:id="@+id/samerica_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_samerica"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

    <Button
        android:id="@+id/australia_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_australia"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

    <Button
        android:id="@+id/africa_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/capitals_africa"
        android:textColor="@android:color/white"
        android:background="?android:attr/dividerVertical"/>

</LinearLayout>
</ScrollView>